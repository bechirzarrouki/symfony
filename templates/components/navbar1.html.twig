{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}
{% set user = app.session.get('user') %}
<div class="navbar-container">
    <nav class="navbar">
        <div class="navbar-content">
            <a href="#" class="logo">
                <span class="logo-text">InnovMatch</span>
            </a>

            <div class="nav-search">
                <input type="text" id="search-user" placeholder="Rechercher un utilisateur..." class="search-input" />
                <button id="voice-search" class="voice-button">
                    <i class="fas fa-microphone"></i>
                </button>
                <div id="search-results" class="search-results"></div>
            </div>

            <div class="nav-right">
                <div class="profile-circle">
                    <a href="/chat/message">
                        <i class="icon fas fa-comment" style="color: #53348D;"></i>
                    </a>
                </div>
            </div>
            <div class="profile-circle">
                    <img src="{{ asset('uploads/profile_images/' ~ user.getProfileImage()) }}" alt="Profil" class="profile-image" />
            </div>
        </div>
    </nav>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("search-user");
        const searchResults = document.getElementById("search-results");
        const voiceButton = document.getElementById("voice-search");

        searchInput.addEventListener("input", function () {
            fetchSearchResults(searchInput.value.trim().toUpperCase());
        });

        function fetchSearchResults(query) {
            if (query.length < 1) {
                searchResults.innerHTML = "";
                searchResults.style.display = "none";
                return;
            }

            fetch(`/search-user`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ query: query })
            })
            .then(response => response.json())
            .then(data => {
                searchResults.innerHTML = "";
                searchResults.style.display = "block";

                if (data.length === 0) {
                    searchResults.innerHTML = "<p style='padding: 10px;'>Aucun utilisateur trouv√©</p>";
                    return;
                }

                data.forEach(user => {
                    const userElement = document.createElement("div");
                    userElement.classList.add("search-result-item");
                    userElement.innerHTML = `
                        <a href="search/${user.id}">
                            <img src="uploads/profile_images/${user.image}" alt="${user.username}" class="search-avatar" />
                            <span>${user.username}</span>
                        </a>
                    `;
                    searchResults.appendChild(userElement);
                });
            })
            .catch(error => console.error("Erreur de recherche:", error));
        }

        document.addEventListener("click", function (event) {
            if (!searchInput.contains(event.target) && !searchResults.contains(event.target)) {
                searchResults.style.display = "none";
            }
        });

        // üé§ Ajout de la reconnaissance vocale
        if ('webkitSpeechRecognition' in window) {
            const recognition = new webkitSpeechRecognition();
            recognition.lang = "fr-FR"; // D√©finir la langue en fran√ßais
            recognition.continuous = false;
            recognition.interimResults = false;

            voiceButton.addEventListener("click", function () {
                recognition.start();
                voiceButton.style.color = "red"; // Indiquer que l'√©coute est active
            });

            recognition.onresult = function (event) {
                const transcript = event.results[0][0].transcript;
                searchInput.value = transcript;
                fetchSearchResults(transcript.toUpperCase()); // Lancer la recherche auto
            };

            recognition.onspeechend = function () {
                recognition.stop();
                voiceButton.style.color = "#53348D"; // R√©tablir la couleur d'origine
            };

            recognition.onerror = function (event) {
                console.error("Erreur de reconnaissance vocale:", event.error);
                voiceButton.style.color = "#53348D";
            };
        } else {
            console.warn("Reconnaissance vocale non support√©e sur ce navigateur.");
            voiceButton.style.display = "none"; // Cacher le bouton si non support√©
        }
    });
</script>

<style>
    .voice-button {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 20px;
        color: #53348D;
        margin-left: 10px;
        outline: none;
        transition: color 0.3s ease;
    }

    .voice-button:hover {
        color: #6a4cde;
    }

    .search-results {
        position: absolute;
        background: white;
        width: 36%;
        border: 1px solid #53348D;
        border-radius: 1.5rem;
        max-height: 250px;
        overflow-y: auto;
        z-index: 1000;
        margin-top: 55px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        display: none;
        padding: 0.5rem;
    }

    .search-result-item {
        display: flex;
        align-items: center;
        padding: 12px;
        cursor: pointer;
        border-bottom: 1px solid #eee;
        font-size: 16px;
        transition: background 0.3s ease, padding-left 0.3s ease;
    }

    .search-result-item:hover {
        background: #f5f5f5;
        padding-left: 20px;
    }

    .search-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 12px;
        object-fit: cover;
    }

    .search-input {
        width: 60%;
        padding: 1rem 1.5rem;
        border: 2px solid #53348D;
        border-radius: 2.5rem;
        outline: none;
        background-color: #f9f9f9;
        font-size: 16px;
        color: #333;
        box-sizing: border-box;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        border-color: #6a4cde;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(83, 52, 141, 0.3);
    }

    .search-input::placeholder {
        color: #bbb;
        font-style: italic;
    }
</style>
