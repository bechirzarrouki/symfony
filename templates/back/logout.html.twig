{% extends 'base.html.twig' %}

{% block title %}Logout{% endblock %}

{% block body %}
    <div class="logout-container">
        <h1 class="logout-title">You have been logged out</h1>
        <p>Thank you for using the system.</p>
        <a href="{{ path('app_login') }}" class="btn return-btn">Return to Login</a>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .logout-container {
            max-width: 500px;
            margin: 100px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .logout-title {
            color: purple;
        }

        .return-btn {
            text-decoration: none;
            color: white;
            background-color: purple;
            padding: 10px 15px;
            border-radius: 5px;
        }
    </style>
{% endblock %}
