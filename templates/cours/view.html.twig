{% extends 'base.html.twig' %}

{% block title %}
	{{ cours.nomCours }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/cours.css') }}">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/navbar.js') }}"></script>
{% endblock %}

{% block body %}
	<div class="app-container">
		{% include 'components/navbar.html.twig' %}
		{% include 'components/sidebar.html.twig' %}

		<main
			class="main-content">
			<!-- Hero Section -->
			<div class="hero">
				<div class="hero-bg">
					<div class="hero-content">
						<div class="hero-text">
							<h1>{{ cours.nomCours }}</h1>
							<p>{{ cours.description }}</p>
						</div>
						<div class="hero-image">
							<img src="{{ asset('images/img.png') }}" alt="Course Image">
						</div>
					</div>
				</div>
				<div class="text-center">
					<form action="#" method="post">
						<input type="hidden" name="id_cours" value="{{ cours.id }}">
						<button type="submit" class="btn-more">Take quiz</button>
					</form>


				</div>
			</div>

			<!-- Course Content Section -->
			<div class="pdf-content">
				<h2>Contenu du Cours</h2>
				<!-- Utilisation d'un iframe pour afficher le PDF -->
				<iframe src="{{ asset('courspdf/' ~ cours.filename) }}" frameborder="0"></iframe>
			</div>
		</main>
	</div>
{% endblock %}
