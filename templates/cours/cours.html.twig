{% extends 'base.html.twig' %}

{% block title %}Courses
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/cours.css') }}">
	<link
	rel="stylesheet" href="{{ asset('css/navbar.css') }}">
	<!-- Include navbar CSS -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/navbar.js') }}"></script>
{% endblock %}

{% block body %}
	<div class="app-container">
		{% include 'components/navbar.html.twig' %}
		{% include 'components/sidebar.html.twig' %}
		<!-- Include the navbar without modifying it -->

		<main class="main-content">
			<div class="hero">
				<div class="hero-bg">
					<div class="hero-content">
						<div class="hero-text">
							<h1>FIND THE BEST ONLINE COURSES & LEARN</h1>
							<p>Enhance your skills and get certified with our wide range of courses.</p>
						</div>
						<div class="hero-image">
							<img src="{{ asset('images/img.png') }}" alt="Hero Image">
						</div>
					</div>
				</div>
			</div>

			<!-- Courses Section -->
			<div class="courses">
				<div class="container">
					<div
						class="courses-grid">
						<!-- Display filtered courses -->
						{% for a in tabcours %}
							<div class="course">
								<div class="course-content">
									<a href="{{ path('app_cours_view', { id: a.id }) }}" class="course-image">
										<img src="{{ a.image ? asset('coursimg/' ~ a.image) : asset('images/course01.jpg') }}" alt="{{ a.nomCours }}">
									</a>
									<div class="course-details">
										<a href="{{ path('app_cours_view', { id: a.id }) }}">
											{{ a.nomCours }}
										</a>
										<p class="course-description">{{ a.description }}</p>
										<div class="course-info">
											<span>{{ a.duree }}</span>
											<span class="free">{{ a.type }}</span>
										</div>
									</div>
								</div>
							</div>
						{% else %}
							<p>No courses found matching your search criteria.</p>
						{% endfor %}
					</div>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
