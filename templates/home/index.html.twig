{% extends 'base.html.twig' %}

{% block title %}Home - Purple Social{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/navbar.js') }}"></script>

{% endblock %}

{% block body %}  
  {% include 'components/navbar.html.twig' %}
  {% include 'components/sidebar.html.twig' %}
<div class="post-container">
    <div class="create-post">
        <h2>Create Your Investment</h2>
        <div class="post-input-wrapper">
            <input type="text" placeholder="Qu'avez-vous en tête ?">
            <!-- Liste déroulante pour le type d'investissement -->
            <select class="investment-type">
                <option value="">Choisir un type</option>
                <option value="real-estate">Immobilier</option>
                <option value="stocks">Actions</option>
                <option value="bonds">Obligations</option>
                <option value="crypto">Cryptomonnaies</option>
            </select>
        </div>
        <div class="post-actions">
            <button class="action-btn add-btn">
                <i class="fas fa-plus"></i> <!-- Icône plus -->
            </button>
            <button class="publish-btn">
                <i class="fas fa-paper-plane"></i> Publier <!-- Publier à droite -->
            </button>
        </div>
    </div>
</div>

{% endblock %}
